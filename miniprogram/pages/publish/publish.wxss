.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding-top: 20rpx;
}
.content {
  padding: 10rpx;
  color: #fff;
  width: 90%;
  height: 250rpx;
  border: solid 2rpx #b36b00;
  background: #9ab3f5;
  border-radius: 50rpx;
}
.footer-c{
  display: flex;
  justify-content: center;
  align-items: center;
}
.footer {
  position: fixed;
  left: 50%;
  /* bottom: 50rpx; */
  transform: translateX(-50%);
  width: 280rpx;
  height: 90rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background:#9ab3f5;
  border-radius: 50rpx;

}
.send-btn {
  font-size: 60rpx;
  font-weight: 900;
  color: #000;
}
.sendm{
  animation: move 0.5s ease-in ;
}
@keyframes move{
  0%{transform: translateY(-10rpx);
    font-size: 60rpx;
  opacity: 1;}
  100%{transform: translateY(-300rpx);
    font-size: 200rpx;
  opacity: 0.2;}
}

.text{
  color: #9ab3f5;
  font-size:100rpx;
  height: 100rpx;
  width: 100rpx;
}
.imagelist{
  padding: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.image{
  margin: 10rpx;

  width: 80px;
  height: 80px;
}
.image-wrap {
  width: 220rpx;
  height: 220rpx;
  margin-right: 10rpx;
  margin-bottom: 10rpx;
  position: relative;
  overflow: hidden;
  text-align: center;
}
.icon-shanchu {
  position: absolute;
  top: 16rpx;
  right: 6px;
  width: 40rpx;
  height: 40rpx;
  background-color: #000;
  opacity: 0.8;
  color: #fff;
  text-align: center;
  line-height: 40rpx;
  font-size: 38rpx;
  font-weight: bolder;
}
.selectphoto {
  border: 2rpx dashed #cbd1d7;
  position: relative;
} 

